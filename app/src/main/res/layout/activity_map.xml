<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:context="com.example.mapwithmarker.MapsMarkerActivity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/editText"
         />
    <ImageButton
        android:id="@+id/map_current_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_my_location"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/transparent"
        />

    <TextView
        android:id="@+id/map_title_textView"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/location_name"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/editText"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/map_next_button"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="@color/searchLocationEditTextBackground"
         />

    <Button
        android:id="@+id/map_next_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/locatoin_next_button"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/editText"

        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorPrimary"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/location_search"
        android:textStyle="bold"
        android:layout_gravity="bottom"
        android:background="@color/searchLocationEditTextBackground"
        android:enabled="false"
        android:gravity="center"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/editText"
        />




</android.support.constraint.ConstraintLayout>