<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/location_comment_user"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/location_commnet_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_name"
                app:layout_constraintLeft_toRightOf="@+id/location_comment_user"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.25"/>

            <TextView
                android:id="@+id/location_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location_comment"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/location_comment_user"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <ImageView
                android:id="@+id/location_comment_heart_imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_heart"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/location_comment_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" />


            <TextView
                android:id="@+id/location_comment_heart_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero_to_five_default"
                app:layout_constraintLeft_toRightOf="@+id/location_comment_heart_imageView"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/location_comment_content" />

            <ImageView
                android:id="@+id/location_comment_pet_imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_pet"
                app:layout_constraintLeft_toRightOf="@+id/location_comment_heart_textView"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/location_comment_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/location_comment_pet_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero_to_five_default"
                app:layout_constraintLeft_toRightOf="@+id/location_comment_pet_imageView"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/location_comment_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>